
<MudDrawer @bind-Open="NavBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudIcon Size="Size.Large" Color="Color.Inherit" Icon="@Icons.Material.Filled.Games" />
        <MudText Typo="Typo.h4" Color="Color.Primary" Style="margin-left:15px;" Align="Align.Center">Canastic</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        @* Add more sites *@
        <MudNavLink Href="game" Icon="@Icons.Material.Filled.Games">Spil Canasta</MudNavLink>
        <MudNavLink Href="rules" Icon="@Icons.Material.Filled.Rule">Regler</MudNavLink>
        <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" Expanded="true">
            <MudNavLink Href="players" Icon="@Icons.Material.Filled.Person">Spillere</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>


@code {
    [Parameter]
    public bool NavBarOpen { get; set; }
}
