@inherits LayoutComponentBase

<MudLayout>
    <AppBar NavBarToggled="ToogleNavbar" ThemeToggled="ToggleTheme" />

    <NavMenu NavBarOpen="_navbarOpen" />

    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />

@code{

    private MudTheme _currentTheme = new MudTheme();

    public bool _navbarOpen = false;



    private void ToogleNavbar()
    {
        _navbarOpen = !_navbarOpen;
    }

    private void ToggleTheme(MudTheme changedTheme)
    {
        _currentTheme = changedTheme;
    }

}

<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />