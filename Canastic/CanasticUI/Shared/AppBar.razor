<MudAppBar Elevation="3">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                   OnClick="async () => await NavBarToggled.InvokeAsync()" />
    <MudAppBarSpacer />
    @if (_isLightMode)
    {
        <MudIconButton Icon="@Icons.Material.Filled.WbSunny" Color="Color.Inherit" OnClick="ToggleTheme" />    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.Brightness3" Color="Color.Inherit" OnClick="ToggleTheme" />
    }
</MudAppBar>
